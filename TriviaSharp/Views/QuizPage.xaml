<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TriviaSharp.Views.QuizPage">
    <VerticalStackLayout Padding="20" Spacing="20">
        <Label x:Name="TimerLabel" FontSize="18" HorizontalOptions="Center"/>
        <Label x:Name="CounterLabel" FontSize="18" HorizontalOptions="Center"/>
        <Label x:Name="ScoreLabel" FontSize="18" HorizontalOptions="Center"/>
        <Label x:Name="QuestionLabel" FontSize="24" HorizontalOptions="Center" />
        <VerticalStackLayout x:Name="AnswersLayout" Spacing="10"/>
    </VerticalStackLayout>
</ContentPage>